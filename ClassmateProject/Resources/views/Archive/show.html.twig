{%extends "ClassMateBundle:Archive:index.html.twig"%}
{% block container -%}
    <style type ="text/css">
        tr{
            font-size: 17px;
        }

        a{
            margin-top: 15px;
        }
        
    </style>

    <div class="container main_container">
        <h2 class="blueH2">Show Archive</h2><br><br>

        <table class="record_properties col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
            <tbody>
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">Archive ID:</th>
                    <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">{{ entity.archiveId }}</td>
                </tr>
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">Archive User ID:</th>
                    <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">{{ entity.archiveUserId }}</td>
                </tr>
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">Archive Course ID:</th>
                    <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">{{ entity.archiveCourseId }}</td>
                </tr>
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">File Name:</th>
                    <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">{{ entity.fileName }}</td>
                </tr>
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">File Type:</th>
                    <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">{{ entity.fileType }}</td>
                </tr>
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">File Location:</th>
                    <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">{{ entity.fileLocation }}</td>
                </tr>
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">Date Created:</th>
                    <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">{{ entity.dateCreated|date('Y-m-d') }}</td>
                </tr>
            </tbody>
        </table>
        
        <div class="row">
            <a class="btn btn-large btn-primary col-xs-offset-2 col-xs-8 col-sm-offset-4 col-sm-4 col-md-offset-16 col-md-4 col-lg-offset-4 col-lg-4" href="{{ path('class_mate_archive_list') }}">
                Back to List View
            </a>
        </div>

        <!--

        <div class="row">
            <a class="btn btn-large btn-primary col-xs-offset-2 col-xs-8 col-sm-offset-4 col-sm-4 col-md-offset-16 col-md-4 col-lg-offset-4 col-lg-4"  href="{{ path('archive_edit', { 'id': entity.archiveId }) }}">
                Edit
            </a>
        </div>
        <div class="row">
            {{ form(delete_form) }}
        </div>
        -->
        
    </div>
{% endblock %}

{%block javascripts %}
    <script type="text/javascript">
        
        //Handles changing the active button in the header
        curActive = $(".navbar-nav li.active").attr('id');
        $("#"+curActive).attr('class', '');
        $("#menu_admin").attr('class', 'active');
        
        $("#form_submit").attr('class', 'btn btn-primary btn-xs');

        //Changes the page title
        document.title = "ClassMate - Admin - Show Archive";
        
    </script>
{%endblock%}

