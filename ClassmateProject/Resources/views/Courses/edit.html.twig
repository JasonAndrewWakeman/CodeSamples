{%extends "ClassMateBundle:Courses:index.html.twig"%}

{% block container -%}
    <style type ="text/css">
		input {
            color: #00ADEF; 
            background-color: #fff;
            width: auto;
        }

        tr{
            font-size: 17px;
        }

        .buttonSpace{
            margin-top: 15px;
        }

        ul.parsley-error-list li {
          color: #FFF;
          line-height: 13px;
        }
        input.parsley-error, textarea.parsley-error {
            color: #B94A48 !important;
            background-color: #D36363 !important;
            border: 1px solid #EED3D7 !important;
      }
      .join_input{
        color: #000;
      }
    </style>

    <div class="container main_container" >
        <h2 class="blueH2">Edit {{entity.courseName}}</h2>


        <form id="form" class="col-md-offset-3 col-md-6" method="POST" action="{{path('class_mate_update_courses')}}" data-validate="parsley">
            
            <table class="record_properties col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <tbody>
                    <tr>
                        <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">
                            Course Name
                        </th>
                        <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <input type="text" name="courseName" class="col-xs-offset-2 col-xs-9 col-sm-offset-3 col-sm-4 col-md-offset-16 col-md-7 col-lg-offset-4 col-lg-5 input-xlarge edit_input" data-trigger="change" data-required="true" value="{{entity.courseName}}">
                        </td>
                    </tr>

                </tbody>
            </table>
            <br>

            <input type="hidden" name="courseId" value="{{entity.courseId}}">
            <div class="row">
                <button class="btn btn-large btn-primary buttonSpace col-xs-offset-2 col-xs-8 col-sm-offset-4 col-sm-4 col-md-offset-16 col-md-4 col-lg-offset-4 col-lg-4" type="submit" >Save Changes</button>
            </div>

            <div class="row">
                <a class="btn btn-large btn-primary buttonSpace col-xs-offset-2 col-xs-8 col-sm-offset-4 col-sm-4 col-md-offset-16 col-md-4 col-lg-offset-4 col-lg-4" 
                    href="{{ path('class_mate_courses_list') }}" 
                    onclick="return(confirm('Any unsaved changes will be lost.  Are you sure you want to leave this page?'))"
                >
                    Back to List View
                </a>
            </div>
        </form>


    </div>
{% endblock %}
{%block javascripts %}
    <script type="text/javascript">
        
        //Handles changing the active button in the header
        
        $("#form_submit").attr('class', 'btn btn-primary btn-xs');
     

        //Changes the page title
        document.title = "Admin - Archive Edit";
        
    </script>
{%endblock%}