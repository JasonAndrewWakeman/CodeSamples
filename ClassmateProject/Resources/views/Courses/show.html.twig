{%extends "ClassMateBundle:Courses:index.html.twig"%}

{% block container -%}
    <style type ="text/css">
        tr{
            font-size: 17px;
        }

        a{
            margin-top: 15px;
        }
        
    </style>

    <div class="container main_container" >
        <h2 class="blueH2">Show Course</h2><br><br>

        <table class="record_properties col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
            <tbody>
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">Course ID</th>
                    <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">{{ entity.courseId }}</td>
                </tr>
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">Creator User ID</th>
                    <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">{{ entity.creatorUserId }}</td>
                </tr>
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">Course Name</th>
                    <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">{{ entity.courseName }}</td>
                </tr>
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align:right;">Date Created</th>
                    <td class="col-xs-6 col-sm-6 col-md-6 col-lg-6">{{ entity.dateCreated|date('Y-m-d') }}</td>
                </tr>
            </tbody>
        </table>

        <div class="row">
            <a class="btn btn-large btn-primary col-xs-offset-2 col-xs-8 col-sm-offset-4 col-sm-4 col-md-offset-16 col-md-4 col-lg-offset-4 col-lg-4" href="{{ path('class_mate_courses_list') }}">
                Back to List View
            </a>
        </div>
        <div class="row">
            <a class="btn btn-large btn-primary col-xs-offset-2 col-xs-8 col-sm-offset-4 col-sm-4 col-md-offset-16 col-md-4 col-lg-offset-4 col-lg-4"  href="{{ path('courses_edit', { 'id': entity.courseId }) }}">
                Edit
            </a>
        </div>
        <div class="row">
            {{ form(delete_form) }}
        </div>

    </div>
{% endblock %}
{%block javascripts %}
    <script type="text/javascript">
        
        //Handles changing the active button in the header
        curActive = $(".navbar-nav li.active").attr('id');
        $("#"+curActive).attr('class', '');
        $("#menu_admin").attr('class', 'active');
        
        $("#form_submit").attr('class', 'btn btn-large btn-primary col-xs-offset-2 col-xs-8 col-sm-offset-4 col-sm-4 col-md-offset-16 col-md-4 col-lg-offset-4 col-lg-4');
        $("#form_submit").attr('style', 'margin-top: 15px;');
        //Changes the page title
        document.title = "ClassMate - Admin - Show Course";
        
    </script>
{%endblock%}
