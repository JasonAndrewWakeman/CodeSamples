{%extends "ClassMateBundle:Default:index.html.twig"%}
{%block stylesheets %}
    <style>
        .form-signin {
            text-align: center;
        }

        .add-space {
            margin-top: 10px;
        }
    </style>
{%endblock%}
{%block container %}

    <div class="container main_container">

        <form class="form-signin" method ="POST" action="{{path('class_mate_next')}}" data-validate="parsley">
            <h2 class="form-signin-heading blueH2">Please Sign In</h2>
            <input type="text" id="username" class="input-block-level" name="username" placeholder="Username" data-trigger="change" data-required="true">
            <br>
            <br>
            <input type="password" class="input-block-level add-space" name="password" placeholder="Password" data-trigger="change" data-required="true">
            
            <!--
            <label class="checkbox remember_label">
                <input type="checkbox" name="remember" value="remember-me"> Remember me
            </label>
            -->
            <br>
            <button class="btn btn-large btn-primary add-space" type="submit">Sign in</button>
           
        </form>

    </div> 

   


{%endblock%}

{%block javascripts %}
    <script type="text/javascript">
        
        //Handles changing the active button in the header
        curActive = $(".navbar-nav li.active").attr('id');
        $("#"+curActive).attr('class', '');
        $("#menu_login").attr('class', 'active');

        //Changes the page title
        document.title = "ClassMate - Sign In";




        
    </script>

    
{%endblock%}



    