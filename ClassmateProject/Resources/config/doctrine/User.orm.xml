<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Project\ClassMateBundle\Entity\User" table="user">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="firstName" type="string" column="first_name" length="45" nullable="false"/>
    <field name="lastName" type="string" column="last_name" length="45" nullable="false"/>
    <field name="email" type="string" column="email" length="60" nullable="true"/>
    <field name="username" type="string" column="username" length="45" nullable="true"/>
    <field name="password" type="string" column="password" length="45" nullable="true"/>
    <field name="userType" type="string" column="user_type" length="10" nullable="true"/>
    <field name="dateCreated" type="datetime" column="date_created" nullable="false"/>
    <field name="dateModified" type="datetime" column="date_modified" nullable="true"/>
    <field name="dateDeleted" type="datetime" column="date_deleted" nullable="true"/>
  </entity>
</doctrine-mapping>
